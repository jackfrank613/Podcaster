<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F6FBFF"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/conlayout4">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="@+id/conlayout4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/conlayout4"
                app:layout_constraintTop_toTopOf="@+id/conlayout4"
                app:srcCompat="@drawable/ic_arrow" />

            <RelativeLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="@id/conlayout4"
                app:layout_constraintBottom_toTopOf="@+id/container"
                app:layout_constraintEnd_toEndOf="@+id/conlayout4"
                app:layout_constraintTop_toBottomOf="@+id/textView7">

                <LinearLayout
                    android:id="@+id/relative1"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="57dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:alpha="0.8"
                        android:layout_gravity="center"
                        android:fontFamily="@font/manrope_medium"
                        android:text="China"
                        android:textColor="@color/font_title"
                        android:textSize="15sp" />
                    <View
                        android:id="@+id/view1"
                        android:layout_marginTop="6dp"
                        android:layout_width="96dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:background="@drawable/title_background"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/relative2"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="57dp"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:alpha="0.2"
                        android:fontFamily="@font/manrope_medium"
                        android:text="Global"
                        android:layout_gravity="center"
                        android:textColor="@color/font_title"
                        android:textSize="15sp" />
                    <View
                        android:id="@+id/view2"
                        android:layout_marginTop="6dp"
                        android:layout_width="96dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        android:background="@drawable/title_background"/>

                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="@+id/conlayout4"
                app:layout_constraintEnd_toEndOf="@+id/conlayout4"
                app:layout_constraintStart_toStartOf="@+id/conlayout4"
                app:layout_constraintTop_toBottomOf="@+id/tablayout" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="Top40"
                android:textColor="@color/font_title"
                android:textSize="19sp"
                app:layout_constraintBottom_toTopOf="@+id/tablayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>