<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollviewlayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/manrope_semibold"
                android:text="Edit Profile"
                android:textColor="@color/font_title"
                android:textSize="19sp"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

            <LinearLayout
                android:id="@+id/backlinear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintHorizontal_bias="0.043"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/constraintLayout">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_b_arrow" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="45dp"
                android:alpha="0.7"
                android:fontFamily="@font/manrope_medium"
                android:text="Name"
                android:textColor="@color/font_title"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:alpha="0.3"
                android:background="@drawable/edit_background_two"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView34">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="19dp"
                    android:alpha="0.9"
                    android:text="Jin Dong zhe"
                    android:cursorVisible="false"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/manrope_medium"
                    android:textColor="@color/edit"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:alpha="0.7"
                android:fontFamily="@font/manrope_medium"
                android:text="City"
                android:textColor="@color/font_title"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/name_layout"
                app:layout_goneMarginTop="15dp" />

            <LinearLayout
                android:id="@+id/city_layout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:alpha="0.3"
                android:background="@drawable/edit_background_two"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView35">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_city"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="19dp"
                    android:alpha="1"
                    android:text="Shen Yang"
                    android:cursorVisible="false"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/manrope_medium"
                    android:textColor="@color/edit"
                    android:textSize="15sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:alpha="0.7"
                android:fontFamily="@font/manrope_medium"
                android:text="Country"
                android:textColor="@color/font_title"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/city_layout"
                app:layout_goneMarginTop="15dp" />

            <LinearLayout
                android:id="@+id/country_layout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:alpha="0.3"
                android:background="@drawable/edit_background_two"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView36">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_country"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="19dp"
                    android:alpha="0.9"
                    android:text="China"
                    android:cursorVisible="false"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/manrope_medium"
                    android:textColor="@color/edit"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="15dp"
                android:alpha="0.7"
                android:fontFamily="@font/manrope_medium"
                android:text="Languages"
                android:textColor="@color/font_title"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/country_layout"
                app:layout_goneMarginTop="15dp" />

            <LinearLayout
                android:id="@+id/lang_layout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="24dp"
                android:alpha="0.3"
                android:background="@drawable/edit_background_two"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView37">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txt_lang"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginEnd="19dp"
                    android:alpha="0.9"
                    android:cursorVisible="false"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/manrope_medium"
                    android:textColor="@color/edit"
                    android:textSize="15sp" />

            </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="400dp"
               app:layout_constraintTop_toBottomOf="@+id/lang_layout"
               >

           </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/done"
        android:background="@drawable/button_background_pressed"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/manrope_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>